PATH=/usr/sbin:/usr/bin:/sbin:/bin
#
## sync abs
#30 12 * * * /usr/bin/abs > /dev/null 2>&1

## remove orphans on Fridays
06 09,12,20 * * Fri /usr/bin/pacman -Rsn --noconfirm $(pacman -Qdtq) > /dev/null 2>&1 

## clear cache on Mondays
06 09,12,20 * * Mon /usr/bin/paccache --remove --uninstalled > /dev/null 2>&1
07 09,12,20 * * Mon /usr/bin/paccache --remove --keep 2 > /dev/null 2>&1
